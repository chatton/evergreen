{
  "name": "evergreen-ci",
  "description": "Evergreen CI Language Server",
  "author": "Cian Hatton",
  "license": "MIT",
  "version": "0.0.4",
  "categories": [],
  "keywords": [],
  "engines": {
    "vscode": "^1.30.0"
  },
  "publisher": "chatton",
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "evgExtension.runTask",
        "title": "Evg: Run Task"
      }
    ],
    "configuration": {
      "title": "Evergreen",
      "properties": {
        "evergreen.projectRoot": {
          "type": "string",
          "default": "",
          "description": "Specifies the root of the evergreen project."
        },
        "evergreen.projectName": {
          "type": "string",
          "default": "",
          "description": "Must match the name of the evergreen project."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "vscode-install"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/node": "^8.0.0",
    "tslint": "^5.16.0",
    "eslint": "^4.11.0",
    "typescript": "^3.5.1",
    "yaml": "^1.6.0",
    "vscode": "^1.1.35"
  },
  "dependencies": {
    "@types/yaml": "^1.0.2",
    "child_process": "^1.0.2",
    "yaml": "^1.6.0",
    "yaml-js": "^0.2.3",
    "file-url": "^2.0.2",
    "xmlhttprequest": "^1.8.0",
    "vscode-languageserver": "^4.1.3",
    "vscode-languageclient": "^4.1.4"
  }
}
